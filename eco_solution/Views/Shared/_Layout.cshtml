<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/contrast.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/navestilo.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/scss/style.scss" rel="stylesheet" type="text/css" />

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>


<header>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary pl-3">
        <a class="navbar-brand ml-auto mr-auto">
            <img src="~/assets/logo.png" alt="Logo da Prefeitura do Rio de Janeiro" width="240" height="42">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon">
            </span>
        </button>
        <div class="navbar-collapse collapse show" id="navbarSupportedContent" style="">
            <ul class="navbar-nav mr-auto ml-auto ">
                <li class="nav-item ">
                    <a class="nav-link" href="@Url.Action("Index","Home")">
                        Página Inicial
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Sobre")">
                        Sobre
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Projeto")">Projetos</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Participantes
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="@Url.Action("Index", "PessoaFisica")">Pessoas Inovadoras</a>
                        <a class="dropdown-item " href="@Url.Action("Index", "PessoaJuridica")">Empresas Inovadoras</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Contato
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="@Url.Action("Faq", "Contato")">
                            FAQ
                        </a>
                        <a class="dropdown-item" href="@Url.Action("Ajuda", "Contato")">
                            Ajuda
                        </a>
                    </div>
                </li>
            </ul>
            <button type="button" class="btn btn-primary mr-3 border-light" data-toggle="modal" onclick="location.href='@Url.Action("Index", "Login")';">
                Login
            </button>


            <button type="button" class="btn btn-primary mr-3 border-light" data-toggle="modal" data-target="#cadModal">
                Cadastre-se
            </button>

            <div class="modal fade" id="cadModal" tabindex="-1" role="dialog" aria-labelledby="cadModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="loginModalLabel">
                                Cadastrar-se como:
                            </h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                        <div class="modal-body" align="center">
                            <div class="mb-2">
                                <a onclick="location.href='@Url.Action("Index", "CadastroPessoaFisica" )';">
                                    <button type="button" class="btn btn-info">
                                        Pessoa Inovadora
                                    </button>
                                </a>
                            </div>
                            <div class="mt-4">
                                <a onclick="location.href='@Url.Action("Index", "CadastroPessoaJuridica" )';">
                                    <button type="button" class="btn btn-info">
                                        Empresa Inovadora
                                    </button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

</header>

<body class="acessibilidade">

    <div class="container body-content">
        <div class="text-right mr-5 mt-4">
            <button class="btn btn-light" onclick="fonte('d');">A-</button>
            <button class="btn btn-light" onclick="fonte('a');">A+</button>
            <a href="#altocontraste" id="altocontraste" accesskey="3" onclick="window.toggleContrast()" onkeydown="window.toggleContrast()" class="btn btn-light">
                <img src="~/assets/c.png" />
                <div id="recipiente"></div>
            </a>
        </div>
        <main>
            @RenderBody()
        </main>


        <hr />

    </div>
    <footer class="page-footer font-small stylish-color-dark text-center">
        <div class="container">
            <div class="row">
                <div class="col-4">
                    <a href="eco_mapaSite.aspx">
                        <p class="text-white">
                            Mapa do Site
                        </p>
                    </a>
                </div>
                <div class="col-4">
                    <b>Links</b><br>
                    <a class="text-white" href="@Url.Action("Ajuda", "Contato")">
                        Ajuda
                    </a>
                    |
                    <a class="text-white"  href="@Url.Action("Faq", "Contato")">
                        FAQ
                    </a>
                    |
                    <a class="text-white" href="eco_termosUso.aspx">
                        Termos de Uso
                    </a>
                    |
                    <a class="text-white" href="eco_politicaPrivacidade.aspx">
                        Política de Privacidade
                    </a>
                </div>
                <div class="col-4">
                    <b>Siga - nos</b>
                    <div class="social-icons">
                        <a class="text-white fa fa-facebook mr-2" href="https://www.facebook.com/PrefeituradoRio" style="text-decoration:none">
                        </a>
                        <a class="text-white fa fa-twitter mr-2" href="https://twitter.com/Prefeitura_Rio" style="text-decoration:none">
                        </a>
                        <a class="text-white fa fa-instagram mr-2" href="https://www.instagram.com/prefeitura_rio/" style="text-decoration:none">
                        </a>
                        <br>
                    </div>
                </div>
            </div>
            <hr>
            <div class="col-md-12" align="center">
                <small>
                    <a class="text-center">
                        © 2018 Copyright - Todos os direitos reservados
                    </a>
                    <br>
                    <a class="text-center" href="https://www.forsoft.org.br/" style="color:white">
                        FORSOFT-RIO
                    </a>
                </small>
            </div>
            <div class="col-md-12">
            </div>
        </div>
    </footer>

    <script src="~/Scripts/js/jquery.min.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script src="~/Scripts/js/zoomInOut.js"></script>
    <script src="~/Scripts/js/popper.min.js"></script>
    <script src="~/Scripts/js/validacao.js"></script>
    <script src="~/Scripts/js/render.js"></script>
    <script src="~/Scripts/js/acessibilidade.js"></script>
    <script src="~/Scripts/js/libras.js"></script>

    <script>
        var wl = new WebLibras({
            compatibilityMode: true
        });
    </script>
</body>
</html>