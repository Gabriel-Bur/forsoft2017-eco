@model eco_solution.ModelView.ModelViewPessoa

@{
    ViewBag.Title = "Perfil";
}




<div class="row col-12 ml-1 mb-5 mt-5">
    <div class="col-1"></div>
    <div class="col-10">
        <div class="card">
            <div class="card-header">
                <h1 class="text-center">Meu Perfil</h1>
            </div>
            <div class="card-body text-center">
                <div class="col-12">
                    <img src="@Html.DisplayFor(model => model.Imagem)" alt="Foto" height="200" width="200"><br>
                    <a href="eco_editarPerfil.aspx">Editar perfil</a><br>
                    <a href="eco_alterarContaPF.aspx">Editar Conta</a>
                </div>
                <hr>
                <b>
                    Nome:
                </b>
                <br>
                <p>@Html.DisplayFor(model => model.Nome)</p>
                <b>
                    Contato:
                </b>
                <p>@Html.DisplayFor(model => model.Telefone)</p>

                <hr>
                <h6 class="display-4">Descrição</h6>
                <p class="card-text text-left">
                    @Html.DisplayFor(model => model.Descricao)
                </p>
                <hr>
                <h6 class="display-4 mb-4">Projetos</h6>
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Seleção</th>
                            <th scope="col">Nº</th>
                            <th scope="col">Nome do projeto</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">
                                <input type="radio">
                            </th>
                            <th scope="row">1</th>
                            <td>Mark</td>
                        </tr>
                        <tr>
                            <th scope="row">
                                <input type="radio">
                            </th>
                            <th scope="row">2</th>
                            <td>Jacob</td>
                        </tr>
                        <tr>
                            <th scope="row">
                                <input type="radio">
                            </th>
                            <th scope="row">3</th>
                            <td>Larry</td>
                        </tr>
                    </tbody>
                </table>

                <div class="text-center">
                    <a href="eco_adicionarInovacao.aspx">
                        <button class="btn btn-primary btn-sx" type="button">Adicionar</button>
                    </a>
                    <a href="eco_editarInovacao.aspx">
                        <button class="btn btn-primary btn-sx" type="button">Editar</button>
                    </a>
                    <button class="btn btn-primary btn-sx" type="button">Remover</button>
                </div>
            </div>
        </div>
    </div>
</div>












