@model eco_solution.ModelView.ModelViewPessoaFisica

@{
    ViewBag.Title = "Details";
}

<div class="row col-12 mb-5 mt-5">
    <div class="col"></div>
    <div class="container  col-12 col-md-10 col-lg-8 col-xl-6">
        <div class="card">
            <div class="card-header">
                <h1 class="text-center">@Html.DisplayFor(model => model.Pessoa.Nome)</h1>
            </div>
            <div class="card-body mt-5 mb-5">
                <h5 class="display-5">
                    Descrição:
                </h5>
                <p>@Html.DisplayFor(model => model.Pessoa.Descricao)</p>
                <h5 class="display-5">
                    Contato:
                </h5>
                <p>@Html.DisplayFor(model => model.Pessoa.Telefone)</p>
                <p>@Html.DisplayFor(model => model.Pessoa.Email)</p>
            </div>
        </div>
    </div>
    <div class="col"></div>
</div>
