@model ICollection<eco_solution.ModelView.ModelViewPessoaFisica>

@{
    ViewBag.Title = "Index";
}


<div class="container">
    @* Barra de Pesquisa*@
    <h1 class="display-4 text-center mb-5 mt-3"> Pessoas Inovadoras</h1>


    <div class="row mt-3 mr-auto ml-auto">
        @foreach (var item in Model)
        {


            <div class="col-sm-7 col-md-6 mb-3 col-lg-4">
                <div class="card">
                    <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.Pessoa.Imagem)" alt="Foto da pessoa inovadora"  style="max-width: 100%; height: 200px;">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Pessoa.Nome)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Pessoa.Descricao)</p>
                        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Details","PessoaFisica",new { id = item.IDPessoaFisica })'">Detalhes</button>
                    </div>
                </div>
            </div>



        }
    </div>
</div>




