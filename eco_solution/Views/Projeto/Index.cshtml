@model ICollection<eco_solution.ModelView.ModelViewProjeto>

@{
    ViewBag.Title = "Index";
}

<div class="container">

    @* Barra de Pesquisa*@
    <h1 class="display-4 text-center mb-5 mt-3"> Projetos Inovadores</h1>
    <div class="row">
        <div class="col"></div>
        <form class="col-8">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Pesquisar" required>
                <button class="btn btn-default btn-dark bg-primary border-primary" type="submit">Buscar</button>
            </div>
        </form>
        <div class="col"></div>
    </div>


    <div class="row mt-3 mr-auto ml-auto">

        @foreach (var item in Model)
        {
            <div class="col-sm-7 col-md-6 mb-3 col-lg-4">
                <div class="card">

                    <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.Imagem)" alt="Foto do projeto inovador" >
                    <div class="card-body">
                        <h5 class="card-title">
                            @Html.DisplayFor(modelItem => item.Nome)
                        </h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Descricao)</p>

                        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Details","Projeto",new { id = item.IDProjeto })'">Detalhes</button>
                    </div>
                </div>
            </div>


        }
    </div>
</div>


