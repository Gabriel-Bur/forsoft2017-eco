@model eco_solution.ModelView.ModelViewPessoa

@{
    ViewBag.Title = "Perfil";
}


<div class="row mb-5 mt-5">
    <div class="col-auto"></div>
    <div class="col-10">
        <div class="card">
            <div class="card-header">
                <h1 class="text-center">Meu Perfil</h1>
            </div>
            <div class="card-body text-center">
                <div class="col-12">
                    <img class="img-fluid" src="@Html.DisplayFor(model => model.Imagem)" alt="Foto" />
                </div>
                <hr>
                <a href="@Url.Action("Edit", "Perfil", new { id = Session["id"] })">Editar Perfil</a>
                |
                <a href="@Url.Action("EditConta", "Perfil", new { id = Session["id"] })">Editar Conta</a>
                <hr>

                <label>Nome:</label>
                <h4>@Html.DisplayFor(model => model.Nome)</h4>
                <label>Contato:</label>
                <h4>@Html.DisplayFor(model => model.Telefone)</h4>
                <hr>
                <h6 class="display-4">Descrição</h6>
                <p class="card-text text-center">
                    @Html.DisplayFor(model => model.Descricao)
                </p>
                <hr>
                <h6 class="display-4 mb-4">Projetos</h6>
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nome</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Projetos)
                        {
                            <tr>
                                <td>@Html.DisplayFor(i => item.IDProjeto)</td>
                                <td>@Html.DisplayFor(i => item.Nome)</td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", "Projeto", new { id = item.IDProjeto }, null) |
                                    @Html.ActionLink("Delete", "Delete", "Projeto", new { id = item.IDProjeto }, null)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="text-center">
                    <button class="btn btn-primary btn-sx" type="button" onclick="location.href='@Url.Action("Create", "Projeto")';">Adicionar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-auto"></div>
</div>
